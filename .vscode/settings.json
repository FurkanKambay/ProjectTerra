{
    "explorer.excludeGitIgnore": true,
    "files.exclude": {
        "**/*.meta": true,
        "UIElementsSchema/": true,
        "Assets/Plugins": true
    },
    "files.readonlyInclude": {
        // "**/*.asset": true,
        // "**/*.meta": true,
        // "**/*.prefab": true,
        // "**/*.unity": true,
        "Packages/packages-lock.json": true
    },
    "cSpell.words": [
        "Behaviour",
        "Bootstrapper",
        "Cooldown",
        "Dont",
        "Gameplay",
        "Hotbar",
        "hotspot",
        "Mathf",
        "Raycast",
        "Rigidbody",
        "Scriptable",
        "superquit"
    ],
    "conventionalCommits.scopes": [
        "art",
        "audio",
        "gameplay",
        "tiles",
        "ui",
        "tool"
    ],
    "conventionalCommits.gitmoji": false,
    "conventionalCommits.promptFooter": false,
    "commitlint.config.extend.rules": {
        "subject-case": [2, "never", ["sentence-case", "start-case", "pascal-case", "upper-case"]],
        "type-empty": [2, "never"]
    }
}
