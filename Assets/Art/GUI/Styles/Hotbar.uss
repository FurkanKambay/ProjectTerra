#hotbar-container {
    flex-direction: row;
    justify-content: center;
    align-items: flex-start;
}

.selected > Button {
    background-color: rgb(45, 99, 153);
    border-color: midnightblue;
    border-width: 2px;
}

#tooltip-container {
    background-color: rgba(45, 99, 153, 0.4);
    align-self: center;
    margin-top: 4px;
    padding-right: 4px;
    padding-left: 4px;
}

#tooltip-item-name {
    margin: 0;
    -unity-text-align: upper-center;
    color: rgb(38, 38, 38);
}
