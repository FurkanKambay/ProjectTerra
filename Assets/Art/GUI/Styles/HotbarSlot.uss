.hotbar-slot {
    justify-content: center;
    align-items: center;
    flex-direction: row;
    margin: 4px 4px 0;
    padding: 0;
    width: 64px;
    height: 64px;
}

.hotbar-slot-icon {
    width: 24px;
    height: 24px;
    position: absolute;
}

.label-amount {
    align-self: flex-end;
    padding: 0;
    margin-top: 0;
    margin-right: 0;
    margin-bottom: 0;
    margin-left: 0;
}
